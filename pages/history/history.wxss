/* pages/history/history.wxss */
.topImage {
    width: 100%;
    height: 250rpx;
    position: absolute;
    z-index: 0;
}
.topBG {
    background-color: #d01b1f;
    height: 300rpx;
    position: relative;
    width: 100%;
}
.title {
    font-size: 32rpx;
    text-align: center;
    margin-top: 250rpx;
    z-index: 3;
    color: #ffffff;
    position: relative;
    background-color: #ffa726;
    height: 50rpx;
}

.page-history{
    width: 100%;
    height: 100%;
    margin:0 auto;
    background-color: #f0f0f0;
    text-align: center;
}
.left-border {
    display: inline-block;
    vertical-align: middle;
    width: 30%;
    height: 2rpx;
    background-color: #e5e6e8;
}
.right-border {
    display: inline-block;
    vertical-align: middle;
    width: 30%;
    height: 2rpx;
    background-color: #e5e6e8;
}
.page-history .title{
    text-align: left;
    background: #fff;
    color:#000;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-history .historys{
    padding-top: 0px;
    
}
.page-history .addition{
    margin-top: 10px;
}
.page-history .historys .history{
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #ebebeb;
    height: 45px;
    padding: 0 40rpx;
    text-align: left;
}
.page-history .historys .history .sortnum{
    color: #d01b1f;
    margin-right: 30rpx;
}

.page-history .historys .history .name{
    padding-left: 5px;
    flex-grow: 8;
}
.page-history .historys .history .arraw{
    flex-grow: 1;
    padding-right: 5px;
    color: #B2B2B2;
    text-align: right;
}
/* 外层组件的宽度可设置成100%或具体数值 */
.page-history .adContainer {
    margin-top: 10px;
    padding-bottom: 10px;
    width: 100%;
}

/* 以下为新增 */
.top {
    position: relative;
    height: 60rpx;
    padding-top: 20px;
}

.top text {
    position: absolute;
    background: #e6e6e6;
    width: 100%;
    height: 1px;
    left: 0;
    top: 50%;
}

.top view {
    font-size: 33rpx;
    width: 260rpx;
    text-align: center;
    height: 45rpx;
    line-height: 45rpx;
    border-radius: 45rpx;
    margin: auto;
    background: #fff;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.list {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    background-color: #fff;
    line-height: 90rpx;
    margin-bottom: 2rpx;
}
.history-title {
    display: flex;
    margin-bottom: 20rpx;
    background-color: #fff;
    line-height: 90rpx;
}
.history-title>text {
    flex: 1;
    text-align: center;
}
.history-title>text:first-child {
    flex: 1;
}
.history-title>text:last-child {
    flex: 3;
}
.history-title text {
    font-size: 30rpx;
}

.list>text {
    flex: 1;
}

.list>text:first-child {
    flex: 1;
    text-align: center;
}
.list>text:last-child {
    flex: 3;
}
.list text:nth-child(1) {
    font-size: 30rpx;
}


.list text:nth-child(3) {
    color: #a0a0a0;
}

.list text:nth-child(4) {
    font-size: 30rpx;
}

.list text:nth-child(1) .span {
    font-size: 22rpx;
}
.list .colororange {
    color: #d01b1f;
}
.list .colorbule {
    color: #38a8ef;
    font-weight: bold;
}