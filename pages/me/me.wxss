.topImage {
    width: 100%;
    height: 250rpx;
    position: absolute;
    z-index: 0;
}
.page-info{
    width: 100%;
    margin:0 auto;
    height: -webkit-fill-available;
    background-color: #f0f0f0;
    text-align: center;
    padding-top: 0px;
}
.page-info .header{
    background-color: #d01b1f;
    height: 150px;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-info .header .info {
    position: relative;
    text-align: center;
    width: 100%;
}
.page-info .header .avatar{
    width: 75px;
    padding-left: 10px;
    margin: auto;
}
.page-info .header .avatar .avatarimage{
    display: flex;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 4rpx #ffffff solid;
    margin: 0 auto;
    z-index: 3;
    position: relative;
}
.page-info .header .nickname{
    font-size: 18px;
    margin-top: 10rpx;
    padding-left: 10px;
    z-index: 3;
    color: #ffffff;
}
.page-info .menus{
    margin-top: 2px;
    border-radius: 10px;
}
.page-info .menus .text {
    font-size: 28rpx;
    
}
.page-info .menus .menu:nth-child(1){
    border-top-left-radius:6px;
    border-top-right-radius:6px;
}
.page-info .menus .menu:last-child{
    border-bottom-left-radius:6px;
    border-bottom-right-radius:6px;
}
.page-info .menus .menu{
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 1px;
    padding-left: 10px;
    text-align: left;
    background: #fff;
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
}
.page-info .menus .menu button{
    width: 100%;
    text-align: left;
    font-size: 15px;
    font-weight: normal;
    padding-left: 10px;

}
.page-info .menu .left{
    width: 90%;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-info .menu .icon{
    width: 32px;
    height: 32px;
}
.page-info .menu .title{
    padding-left: 10px;
    color: #656565;
}
.page-info .menu .arraw{
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    padding-right: 16px;
    display: inline-block;
    color: #B2B2B2;
    position: relative;
}
.page-info .menu .arraw:after{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;

}