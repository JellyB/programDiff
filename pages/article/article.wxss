@import "./weui.wxss";
.topImage {
  width: 100%;
  height: 250rpx;
  position: absolute;
  z-index: 0;
}
.topBG {
  background-color: #d01b1f;
  height: 300rpx;
  position: relative;
  width: 100%;
}

.page {
  background-color: #f9fafc;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.page-body{
  padding-top: 10rpx;
}
.body .page-swiper swiper {
  width: 100%;
  height: 300rpx;
}

.body .page-swiper  swiper image {
  width: 100%;
}

.body{
  width: 100%;
  height: 100%;
  margin:20rpx auto 0;
  text-align: center;
  padding-top: 2px;
}
.page-home .addition{
  margin-top: 10px;
}
.body .articles{
    margin-top: 0px;

}

.body .articles .article{
  padding: 0 40rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #ebebeb;
  line-height: 100rpx;
  text-align: left;
}

.body .articles .article .icon{
  width: 35px;
  height: 35px;
}
.body .articles .article .icon image{
  width: 35px;
  height: 35px;
}
.body .articles .article .title{
  padding-left: 5px;
  flex-grow: 8;
}
.body .articles .article .arrow{
  flex-grow: 1;
}
.page-section-title{
    padding: 0;
  }
  .swiper-item{
    display: block;
    height: 150px;
  }
  .page-section-title{
    margin-top: 60rpx;
    position: relative;
  }

  .body .menu{
    padding: 10px 0;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-content: center;
}

.body .menu view{
    padding: 2px 10px;
    border: 1px solid #1bd0ad;
    border-radius: 20px;
    margin-right: 5px;
    
}
.adContainer {
  width: 100%;
  margin-top: 5px;
}