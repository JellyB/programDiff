.topImage {
    width: 100%;
    height: 250rpx;
    position: absolute;
    z-index: 0;
}
.topBG {
    background-color: #d01b1f;
    height: 300rpx;
    position: relative;
    width: 100%;
}
.title {
    font-size: 32rpx;
    text-align: center;
    margin-top: 250rpx;
    z-index: 3;
    color: #ffffff;
    position: relative;
    background-color: #ffa726;
    height: 50rpx;
}
.page-home{
    width: 100%;
    height: 100%;
    margin:20rpx auto 0;
    text-align: center;
    padding-top: 2px;
}
.page-home .swiper .swiper-item image{
    width: 100%;
}
.page-home .title{
    width: 100%;
    margin-bottom: 20rpx;
    text-align: left;
    background: #fff;
    color:#000;
    height: 50px;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    
    
}
.page-home .home{
    padding-top: 0px;
}
.page-home .addition{
    margin-top: 10px;
}
.page-home .home .brand{
    padding: 0 40rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #ebebeb;
    line-height: 100rpx;
    text-align: left;
}
.page-home .home .brand .sortnum{
    color: #d01b1f;
}
.page-home .home .brand .name{
    padding-left: 5px;
    flex-grow: 8;
}
.page-home .home .brand .arraw{
    flex-grow: 1;
    padding-right: 5px;
    color: #B2B2B2;
    text-align: right;
    position: relative;
}
.page-home .home .brand .arraw:after{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;

}
/* 外层组件的宽度可设置成100%或具体数值 */
.adContainer {
    width: 100%;
    margin-top: 5px;
}


