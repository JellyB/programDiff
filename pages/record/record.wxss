/* pages/history/history.wxss */
.page-history{
    width: 98%;
    height: 100%;
    margin:0 auto;
    background-color: #f0f0f0;
    text-align: center;
    padding-top: 2px;
}
.page-history .title{
    width: 100%;
    text-align: left;
    background: #fff;
    color:#000;
    height: 50px;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-history .historys{
    padding-top: 5px;
}
.page-history .addition{
    margin-top: 10px;
}
.page-history .historys .history{
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #ebebeb;
    height: 45px;
    text-align: left;
}
.page-history .historys .history .sortnum{
    background-color: #d01b1f;
    color: #fff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    text-align: center;

}
.page-history .historys .history .name{
    padding-left: 5px;
    flex-grow: 8;
}
.page-history .historys .history .arraw{
    flex-grow: 1;
    padding-right: 5px;
    color: #B2B2B2;
    text-align: right;
    position: relative;
}
.page-info .menu .arraw:after{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;

}
/* 外层组件的宽度可设置成100%或具体数值 */
.page-history .adContainer {
    margin-top: 10px;
    padding-bottom: 10px;
    width: 100%;
}