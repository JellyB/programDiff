<view class="page">

    
    <view class="body">
        <view class="button">
            <view class="{{daily ? 'btn selected' : 'btn'}}">
                第{{weekNum-31}}周排行
            </view>
        </view>
        <view class="historys">
            <view class="history">
                <view class="num">排名</view>
                <view class="tel">手机号</view>
                <view class="score">分数</view>
                <view class="ytimes">用时</view>
            </view>
            
            <!----
            <block wx:for="{{historys}}" wx:for-index="idx" wx:for-item="item">
                <view class="history">
                    <view class="num">{{idx+1}}</view>
                    <view class="tel">{{item.tel}}</view>
                    <view class="score">{{item.score}}</view>
                    <view class="ytimes">{{item.ytimes}}</view>
                </view>
            </block>
            ---->
            <block wx:for="{{historys}}" wx:for-item="itemChild" wx:for-index="idx">
                <view class='ls-item'>
                    <view class='ls-l ls-l{{idx+1}}'>
                    <view wx:if="{{idx<=2}}" class='img_'>
                        <image wx:if="{{idx==0}}" src='/images/jkt/rank-01.png'></image>
                        <image wx:if="{{idx==1}}" src='/images/jkt/rank-02.png'></image>
                        <image wx:if="{{idx==2}}" src='/images/jkt/rank-03.png'></image>
                    </view>
                    <text wx:if="{{idx>2}}">{{idx+1}}</text>
                    </view>
                    <view class='ls-c'>
                        <view class='ls-c-t'>{{itemChild.tel}}</view>
                        <view class='ls-c-b'>{{itemChild.score}}分</view>
                        <view class='ls-c-img'>{{itemChild.ytimes}}</view>
                    </view>
                </view>
            </block>
            <view class="bottom" style="height: 20rpx;padding: 10rpx 2rpx;margin:0 auto;">
           
            </view>
            <view class='tip'>榜单更新可能存在延迟，具体以数据库存档为准！</view>            
        </view>


    </view>

 
    

    <!-- <view class="footer">
        <image src="/images/foot2.png" style="width:{{windowWidth}}px;"/>
    </view> -->
</view>