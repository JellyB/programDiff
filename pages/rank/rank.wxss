/* miniprogram/pages/home/home.wxss */
.page{
    position: relative;
    background-color: #f6f6f6;
    background-size: 100% auto; 
}
.page .footer{
    z-index: 1;
    position: absolute;
    bottom: 0;
}
.page .footer image{
    z-index: 1;
}

.page .footer image{
    z-index: 1;
}

.page .header{
    padding: 20rpx 0;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.page .header .img1{
    width: 164rpx;
    height: 109rpx;
}
.page .header .img2{
    width: 375rpx;
    height: 108rpx;
}

.page .body{
    background-color: #d01b1f;
    padding: 0 40rpx;
    height: calc(100vh);
    overflow: scroll;
}


.page .button{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}

.page .button .btn{
    background: #d01b1f;
    color: #fff;
    width: 200rpx;
    padding: 10rpx 20rpx;
    text-align: center;
    float: left;
    line-height: 1.15rem;
    border: 0.025rem solid #d01b1f;
    font-weight: bold;
}

.page .body .button .selected{
    background: #d01b1f;
    color: #fff;
    font-weight: bold;
}
.page .body .historys{
    padding: 20rpx 0;
}
.page .body .historys .history{
    width: 100%;
    padding: 10rpx 0 10rpx 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    color: #fff;
    line-height: 30px;
}
.page .body .historys .history .num{
    width: 100rpx;
    text-align: center;

}

.page .body .historys .history .tel{
    width: 200rpx;
    text-align: center;

}
.page .body .historys .history .score{
    width: 100rpx;
    margin-left: 85rpx;
    text-align: center;

}
.page .body .historys .history .ytimes{
    width: 150rpx;
    text-align: center;
}
.page .body .bottom{
    background: #d01b1f;
    width: 100%;
    padding: 10rpx 0 10rpx 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}

.page .remarks{
    width: 550rpx;
    margin: 50rpx auto 0;
    padding: 20rpx 0;
}

.page .sortNo{
    background-color: #d01b1f;
    color: #fff;
    text-align: center;
    width: 100%;

}

.ls-item{
    display: flex;
    margin: 12rpx 0;
    height: 115rpx;
    padding: 16rpx 0;
    background:#fff;
    overflow: hidden;
    position: relative;
    border-bottom: 2rpx solid #f3f4f5;
    background: #fff;
    box-sizing: border-box;
    border-radius: 10rpx;
  }
  
  .ls-item>view{
    height: 92rpx;
    float: left;
  }
  .ls-item .ls-l{
    width: 100rpx;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 40rpx;
    margin-left: 6rpx;
  }
  .ls-item .ls-l .img_{
    width: 60rpx;
    height: 79rpx;
    line-height: 50rpx;
    margin-left:20rpx;
    margin-top:12rpx;
  }
  .ls-item .ls-l .img_ image{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
  }
  
  .ls-item .ls-c{
    display: flex;
    flex: 1;
  }
  .ls-item .ls-c>view{
    float: left;
  }
  .ls-item .ls-c-img{
    height: 92rpx;
    position: relative;
    line-height: 90rpx;
    margin-left: 20rpx;

  }
  .ls-item .ls-c-img image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  .ls-item .ls-c .ls-c-txt{
    width: 486rpx;
    padding-top: 4rpx;
    font-size: 28rpx;
    margin-left: 24rpx;
  }
  .ls-item .ls-c .ls-c-fr{
    text-align: right;
    margin-right: 20rpx;
    line-height: 90rpx;
  }
  .ls-item .ls-c .ls-c-t{
    padding-left: 28rpx;
    overflow: hidden;
    line-height: 90rpx;
    text-overflow: ellipsis;
    white-space:nowrap;
    width: 46%
  }
  .ls-item .ls-c .ls-c-b{
    line-height: 90rpx;
    width: 120rpx;
    text-align: center;

  }
  .ls-item .ls-c .ls-c-fr .ls-c-b{
    margin-top: 0; 
    color: #333;
  }
  .tip{
    text-align: center;
    margin-top: 25rpx;
    font-size: 28rpx;
    color: #f6f6f6;

  }